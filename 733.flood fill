class Solution {
    public int[][] floodFill(int[][] image, int sr, int sc, int color) {
        int co=image[sr][sc];
        //to  check boundry ->need no of rows and columns
        int r=image.length;
        int c=image[0].length;//to find column length
    
        helper(image,sr,sc,color,co,r,c);
        return image;

    }
    public void helper(int[][]image,int sr,int sc,int color,int co,int r,int c){
        if(sr<0||sc<0||sr>r-1||sc>c-1){
            return;
        }
        else if((image[sr][sc]==color)||(image[sr][sc]!=co)){
            return;
        }
        else{
            image[sr][sc]=color;

            helper(image,sr-1,sc,color,co,r,c);
            helper(image,sr+1,sc,color,co,r,c);
            helper(image,sr,sc-1,color,co,r,c);
            helper(image,sr,sc+1,color,co,r,c);
        }
    }
}
